@model Quadrant

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <h2>Confirm Deletion</h2>
            <div class="card">
                <div class="card-body">
                    <h3>@Model.Task</h3>
                    <form method="post">
                        <input type="hidden" asp-for="Key" />
                        <button type="submit" class="btn btn-danger">Delete</button>
                        <a class="btn btn-secondary" asp-controller="Home" asp-action="Quadrants">Cancel</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>