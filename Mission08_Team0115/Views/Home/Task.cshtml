@{
    ViewData["Title"] = "Privacy Policy";
}

@* @model Movies
 *@


<h2>
    Add Task
</h2>
<form method="post">
    <div>
        <label asp-for="Task">Task:</label>
        <input>
    </div>
    <div>
        <label asp-for="DueDate">Due Date:</label>
        <input>
    </div>
    <div>
        <label asp-for="Quadrant1">Quadrant:</label>
        <input>
        <select asp-for="Category">
            <option value=1>1 (Urgent and Important)</option>
            <option value=2>2 (Not Urgent and Important)</option>
            <option value=3>3 (Urgent and Not Important)</option>
            <option value=4>4 (Not Urgent and Not Important)</option>
            </select>
    </div>
    <div>
        <label asp-for="Category">Category:</label>
        <select asp-for="Category">
            <option value="">Select a Category</option>
            @foreach (Category c in ViewBag.Categories)
            {
                <option value="@c.CategoryId">@c.CategoryName</option>
            }
        </select>
    </div>
    <div>
        <label asp-for="Completed">Completed:</label>
        <select asp-for="Completed">
            <option value="true">Yes</option>
            <option value="false">No</option>
        </select>

    </div>
    <div>
        <button type="submit">Submit Task</button>
    </div>
    <div asp-validation-summary="All"></div>
</form>